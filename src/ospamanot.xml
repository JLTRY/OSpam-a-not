<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>plg_system_ospamanot</name>
    <author>Alledia</author>
    <creationDate>January 21 2015</creationDate>
    <copyright>Copyright (C) 2015 Alledia.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>hello@alledia.com</authorEmail>
    <authorUrl>http://www.alledia.com</authorUrl>
    <version>1.0.1</version>
    <description>PLG_SYSTEM_OSPAMANOT_DESCRIPTION</description>

    <alledia>
        <element publish="true">ospamanot</element>
        <namespace>Ospamanot</namespace>
        <license>free</license>
        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework">AllediaFramework</extension>

            <extension
                type="plugin"
                group="system"
                element="ossystem"
                publish="true"
                ordering="first">OSSystem</extension>
        </relatedExtensions>
    </alledia>

    <scriptfile>script.installer.php</scriptfile>

    <media destination="plg_system_ospamanot" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>


    <files>
        <folder>language</folder>
        <folder>Method</folder>
        <folder>library</folder>
        <folder>views</folder>
        <filename plugin="ospamanot">ospamanot.php</filename>
        <filename>include.php</filename>
        <filename>style.css</filename>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="timeGate"
                    type="text"
                    label="PLG_SYSTEM_OSPAMANOT_TIMEGATE_LABEL"
                    description="PLG_SYSTEM_OSPAMANOT_TIMEGATE_DESC"/>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="OSpam-a-not"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/plg_system_ospam-a-not]]></server>
    </updateservers>
</extension>
